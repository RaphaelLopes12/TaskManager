@page "{id:int}"
@model TaskManager.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Editar Tarefa";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Editar Tarefa</h2>

    <form method="post">
        <input type="hidden" asp-for="TaskItem.Id" />

        <div class="mb-3">
            <label class="form-label">Título</label>
            <input asp-for="TaskItem.Title" class="form-control" />
            <span asp-validation-for="TaskItem.Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea asp-for="TaskItem.Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Data de Conclusão</label>
            <input asp-for="TaskItem.DueDate" type="date" class="form-control"
                   min="1900-01-01" max="2099-12-31" placeholder="dd/MM/yyyy" />
            <span asp-validation-for="TaskItem.DueDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Categoria</label>
            <select asp-for="TaskItem.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"
                    class="form-select" required>
                <option value="">Selecione uma categoria</option>
            </select>
            <span asp-validation-for="TaskItem.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Status</label>
            <select asp-for="TaskItem.Status" asp-items="Html.GetEnumSelectList<TaskManager.Enums.TaskState>()"
                    class="form-select">
                <option value="">Selecione um status</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
        <a href="/Tasks/Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
