@page
@model TaskManager.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow" style="width: 400px;">
        <h2 class="text-center mb-4 text-primary">Registrar</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Nome Completo</label>
                <input asp-for="Input.FullName" class="form-control" placeholder="Digite seu nome completo" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Digite seu email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Data de Nascimento</label>
                <input asp-for="Input.BirthDate" type="date" class="form-control" max="@DateTime.UtcNow.AddHours(-3).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Telefone (Opcional)</label>
                <input asp-for="Input.PhoneNumber" type="tel" class="form-control" placeholder="Digite seu telefone (opcional)" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Senha</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Digite sua senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="form-text text-muted">
                    A senha deve conter:
                    <ul class="small">
                        <li>Pelo menos 1 letra maiúscula</li>
                        <li>Pelo menos 1 letra minúscula</li>
                        <li>Pelo menos 1 número</li>
                        <li>Pelo menos 1 caractere especial (@@, #, $, etc.)</li>
                        <li>Mínimo de 6 caracteres</li>
                    </ul>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmar Senha</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirme sua senha" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Registrar</button>

            <div class="text-center mt-3">
                <small>Já tem uma conta? <a href="/Account/Login" class="text-primary">Faça login</a></small>
            </div>
        </form>
    </div>
</div>
